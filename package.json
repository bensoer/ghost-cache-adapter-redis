  "homepage": "https://github.com/bensoer/ghost-cache-adapter-redis#readme",
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "jest": "^28.1.2",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@tryghost/adapter-base-cache": "^0.1.2",
    "redis": "^4.5.1"
